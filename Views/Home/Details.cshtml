@model MVCBooksApp.Models.Book
@{
    ViewBag.Title = "Details";
}

<br />
<h4>Book details</h4>
<hr />
<div>

    <div class="col-6 offset-3 card">

        <br />
        <div class="form-row form-group text-center">
            <div class="col">
                <div class="card">
                    <h5>@Html.DisplayNameFor(model => model.BookTitle)</h5>
                    <p class="text-muted">@Html.DisplayFor(model => model.BookTitle)</p>
                </div>
            </div>

            <div class="col">
                <div class="card">
                    <h5>@Html.DisplayNameFor(model => model.BookGenre)</h5>
                    <p class="text-muted"> @Html.DisplayFor(model => model.BookGenre)</p>
                </div>
            </div>
        </div>
        <div class="form-row form-group text-center">
            <div class="col">
                <div class="card">
                    <h5> @Html.DisplayNameFor(model => model.BookAuthor)</h5>
                    <p class="text-muted"> @Html.DisplayFor(model => model.BookAuthor)</p>
                </div>
            </div>
        </div>
    </div>
</div>
<br />


<div class="btn btn-sm btn-secondary" data-toggle='tooltip' title='Back to book list'>
    <i class="fas fa-long-arrow-alt-left"></i>
    @Html.ActionLink("Back", "Books", null, new { @class = "", style = "text-decoration:none; color: black" })
</div>
<br />
